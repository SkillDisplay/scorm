            <item identifier="working_with_files_item" identifierref="working_with_files_resource">
        <title>Working with files</title>
      </item>
          </organization>
  </organizations>

  <resources>
    <!-- Note that with the addition of run-time calls, we changed the scormtype to SCO.-->
        <resource identifier="about_typo3_resource" type="webcontent" adlcp:scormtype="sco" href="skills/about_typo3.html">
      <file href="skills/about_typo3.html"/>
      <dependency identifierref="common_files" />
    </resource>
        <resource identifier="backend_account_resource" type="webcontent" adlcp:scormtype="sco" href="skills/backend_account.html">
